<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
	">

	<context:component-scan base-package="org.wikipedia.vlsergey.secretary.cache" />

	<bean id="ruWikipediaCache" class="org.wikipedia.vlsergey.secretary.cache.WikiCache">
		<property name="mediaWikiBot" ref="ruWikipediaBot" />
	</bean>

	<bean id="ruWikipediaXmlCache" class="org.wikipedia.vlsergey.secretary.cache.XmlCache"
		p:sessionFactory-ref="ruWikiSessionFactory">
		<property name="mediaWikiBot" ref="ruWikipediaBot" />
	</bean>

	<bean id="storedPageDao" class="org.wikipedia.vlsergey.secretary.cache.StoredPageDao"
		p:sessionFactory-ref="ruWikiSessionFactory" />

	<bean id="storedRevisionDao"
		class="org.wikipedia.vlsergey.secretary.cache.StoredRevisionDao"
		p:sessionFactory-ref="ruWikiSessionFactory" />


	<bean id="transactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="ruWikiSessionFactory" />
	</bean>

	<bean id="hibernateInterceptor" class="org.springframework.orm.hibernate3.HibernateInterceptor">
		<property name="sessionFactory" ref="ruWikiSessionFactory" />
	</bean>

	<bean id="ruWikiCacheDataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="org.apache.derby.jdbc.EmbeddedDriver" />
		<property name="url" value="jdbc:derby:secretarydb;create=true" />
	</bean>

	<bean id="ruWikiSessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource" ref="ruWikiCacheDataSource" />
		<property name="schemaUpdate" value="true" />
		<property name="configLocation" value="hibernate.cfg.xml" />

		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.wikipedia.vlsergey.secretary.utils.ExtendedDerbyDialect
				</prop>
				<prop key="hibernate.show_sql">false</prop>
				<prop key="hibernate.generate_statistics">false</prop>
			</props>
		</property>
	</bean>

	<bean id="hibernateTemplate" class="org.springframework.orm.hibernate3.HibernateTemplate">
		<property name="sessionFactory" ref="ruWikiSessionFactory" />
	</bean>


</beans>
